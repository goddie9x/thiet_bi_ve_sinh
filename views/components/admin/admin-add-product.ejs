<form enctype="multipart/form-data">
	<h2 class="title-header">Thêm sản phẩm</h2>

	<label for="product-name">Tên sản phẩm</label>
	<input
		type="text"
		placeholder="Tên sản phẩm"
		name="name"
		id="product-name"
		required
	/>

	<div class="row mb-1 d-flex align-items-center">
		<div class="col-4">
			<label for="product-cost">Giá sản phẩm</label>
			<input
				type="number"
				placeholder="Giá sản phẩm"
				name="cost"
				id="product-cost"
				required
			/>
		</div>
		<div class="col-4">
			<select name="type" required id="product-type">
				<option value="" selected disabled>Chọn loại trang phục</option>
				<option value="ao-so-mi">Áo sơ mi</option>
				<option value="ao-thun">Áo thun</option>
				<option value="quan-jean">Quần jean</option>
				<option value="other">Khác</option>
			</select>
		</div>
	</div>

	<div class="mt-3 more-product-btn mb-3">
		<button type="button">Thêm màu, size, số lượng...</button>
	</div>
	<div class="more-product-wrap">
	</div>

	<label class="mt-5" for="product-description">Miêu tả sản phẩm</label>
	<textarea
		class="form-control"
		placeholder="Miêu tả sản phẩm"
		name="description"
		id="product-description"
		required
	></textarea>

	<div class="input-images mt-5">
		<label for="product-images"> Thêm ảnh cho sản phẩm </label>
		<input
			hidden
			type="file"
			multiple
			accept=".jpg, .jpeg, .png"
			id="product-images"
			name="images"
		/>
		<div class="preview-images d-flex flex-wrap"></div>
	</div>

	<button type="submit" class="add-product-button">Thêm</button>
</form>
